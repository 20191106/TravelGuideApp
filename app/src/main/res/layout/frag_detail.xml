<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/detail_filterTv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="동남아"
        android:textSize="25sp"
        android:gravity="center"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/detail_placeTv"
        android:layout_toRightOf="@id/detail_filterTv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="호치민"
        android:textSize="25sp"
        android:gravity="center"
        android:padding="10dp"/>
    <LinearLayout
        android:id="@+id/detail_stars"
        android:layout_below="@+id/detail_filterTv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">
    </LinearLayout>
    <ImageView
        android:id="@+id/detail_mark"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/detail_showListBtn"
        android:layout_below="@+id/detail_stars"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/detail_showViewBtn"
        android:layout_below="@+id/detail_stars"
        android:layout_toRightOf="@+id/detail_showListBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/detail_pager"
        android:layout_below="@+id/detail_showListBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"/>
</RelativeLayout>